<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.daisy.pipeline.modules.braille</groupId>
    <artifactId>braille-modules-parent</artifactId>
    <version>1.10-SNAPSHOT</version>
    <relativePath>../../../parent/</relativePath>
  </parent>

  <groupId>org.daisy.pipeline.modules.braille</groupId>
  <artifactId>liblouis-tables</artifactId>
  <version>2.6.2-SNAPSHOT</version>
  <packaging>bundle</packaging>

  <name>DAISY Pipeline 2 Braille Module :: liblouis-tables</name>

  <properties>
    <liblouis.version>2.6.2</liblouis.version>
    <liblouis.tarball.url>https://github.com/liblouis/liblouis/tarball/v${liblouis.version}</liblouis.tarball.url>
    <liblouis.tarball.sha1>4ed13d7aeedbd5a59bbb63f592fcd3a8e559ccb6</liblouis.tarball.sha1>
  </properties>
  
  <dependencies>
    <!--
        OSGi runtime dependencies
    -->
    <dependency>
      <groupId>org.daisy.pipeline.modules.braille</groupId>
      <artifactId>liblouis-core</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.daisy.pipeline.modules.braille</groupId>
      <artifactId>libhyphen-core</artifactId>
      <scope>runtime</scope>
    </dependency>
    <!--
        test dependencies
    -->
    <dependency>
      <groupId>org.daisy.pipeline</groupId>
      <artifactId>pax-exam-helper</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <targetPath>tables</targetPath>
        <directory>${basedir}/target/generated-resources/tables</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>checkout</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <mkdir dir="target/checkout" />
                <get dest="target/checkout/liblouis.tar.gz" src="${liblouis.tarball.url}" usetimestamp="true" skipexisting="true" />
                <local name="checksum.matches" />
                <local name="checksum.matches.fail" />
                <checksum file="target/checkout/liblouis.tar.gz" algorithm="sha1" property="${liblouis.tarball.sha1}" verifyproperty="checksum.matches" />
                <condition property="checksum.matches.fail">
                  <equals arg1="${checksum.matches}" arg2="false" />
                </condition>
                <fail if="checksum.matches.fail">Checksum error</fail>
                <untar src="target/checkout/liblouis.tar.gz" compression="gzip" dest="target/generated-resources">
                  <patternset>
                    <include name="*/tables/*" />
                    <exclude name="*/tables/lang2table" />
                    <exclude name="*/tables/Makefile.am" />
                    <exclude name="*/tables/maketablelist.sh" />
                    <exclude name="*/tables/README" />
                  </patternset>
                  <mapper>
                    <globmapper from="liblouis-liblouis-6e85a44/*" to="*" />
                  </mapper>
                </untar>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.ops4j.pax.exam</groupId>
        <artifactId>maven-paxexam-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-depends-file</id>
            <goals>
              <goal>generate-depends-file</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Import-Package>
              org.daisy.pipeline.braille.liblouis,
              org.daisy.pipeline.braille.libhyphen
            </Import-Package>
            <Service-Component>OSGI-INF/liblouis-default-tables.xml</Service-Component>
          </instructions>
        </configuration>
        <executions>
          <execution>
            <id>manifest-before-test</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>manifest</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
