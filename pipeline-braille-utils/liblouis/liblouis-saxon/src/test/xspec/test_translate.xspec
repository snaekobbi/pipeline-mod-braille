<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:louis="http://liblouis.org/liblouis"
               stylesheet="../resources/phony.xsl">
  
  <x:scenario label="test_01">
    <x:call function="louis:translate">
      <x:param select="concat('(table: &quot;',resolve-uri('../resources/foobar.cti'),'&quot;)')"/>
      <x:param select="'foobar'"/>
    </x:call>
    <x:expect label="result" select="('⠋⠕⠕⠃⠁⠗')"/>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call function="louis:translate">
      <x:param select="concat('(table: &quot;',resolve-uri('../resources/foobar.cti'),'&quot;)')"/>
      <x:param select="('foo','bar')"/>
    </x:call>
    <x:expect label="result" select="('⠋⠕⠕','⠃⠁⠗')"/>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:call function="louis:translate">
      <x:param select="concat('(table: &quot;',resolve-uri('../resources/foobar.cti'),'&quot;)')"/>
      <x:param select="'foobar'"/>
      <x:param select="'font-weight: bold'"/>
    </x:call>
    <x:expect label="result" select="('⠋⠕⠕⠃⠁⠗')"/>
  </x:scenario>
  
  <x:scenario label="test_04">
    <x:call function="louis:translate">
      <x:param select="concat('(table: &quot;',resolve-uri('../resources/foobar.cti'),'&quot;)')"/>
      <x:param select="('foo','bar')"/>
      <x:param select="('','font-weight: bold')"/>
    </x:call>
    <x:expect label="result" select="('⠋⠕⠕','⠃⠁⠗')"/>
  </x:scenario>
  
</x:description>
