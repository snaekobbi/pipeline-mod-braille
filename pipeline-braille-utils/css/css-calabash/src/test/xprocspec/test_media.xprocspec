<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="http://www.daisy.org/pipeline/modules/braille/css-calabash/library.xpl">
  
  <!-- ======= -->
  <!-- test_01 -->
  <!-- ======= -->
  <!--
      
  -->
  <x:scenario label="test_01">
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p {
                  display: block;
                  font-weight: bold;
                }
              </style>
              <style media="print" type="text/css">
                em {
                  display: block;
                  font-weight: bold;
                }
              </style>
            </head>
            <body>
              <p>
                foo<em>bar</em>
              </p>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p style="display: block;">
            foo<em style="font-weight: bold;">bar</em>
          </p>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
