<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               stylesheet="../../main/resources/xml/parse-stylesheet.xsl">
  
  <x:scenario label="test_01">
    <x:context>
      <doc>
        <body style="{{ display: block }} @page {{ size: 30 30; @top-center {{ content: string(running-header) }} }}">
          <p> foo </p>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body style="display: block" css:page="size: 30 30; @top-center {{ content: string(running-header) }}">
          <p> foo </p>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:context>
      <doc>
        <body>
          <p style="{{ display: block }}
                    ::before {{ display: block; margin-left: 2; content: 'bar' }}">
            foo
          </p>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body>
          <p style="display: block" css:before="display: block; margin-left: 2; content: 'bar'">
            foo
          </p>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:context>
      <body>
        <note style="{{ display:inline; content:counter(footnote) }} :flow(footnote) {{ display:list-item }} }}">
          foo
        </note>
      </body>
    </x:context>
    <x:expect label="result">
      <body>
        <note style="display:inline; content:counter(footnote)"
              css:flow-footnote="display:list-item">
          foo
        </note>
      </body>
    </x:expect>
  </x:scenario>
  
</x:description>
